#include<iostream>
#include<cmath>
using namespace std;


int main()
{
	string name;
	double x,z;
	int i = 1;
	char again;

	do

	{
		
		cout << "Please enter your ID number,Thank you! \n" << endl;
		cin >> x;
		cout << "ID number:" << x << endl;
		

		z = x / 5;

		if (z >= 20 && z <= 25)
			cout << "Your bus is Bus A!\a\n" << endl;
		else if (z >= 26 && z <= 30)
			cout << "Your bus is Bus B!\a\n" << endl;
		else if (z >= 31 && z <= 35)
			cout << "Your bus is Bus C!\a\n" << endl;
		else if (z >= 36 && z <= 40)
			cout << "Your bus is Bus D!\a\n" << endl;
		else if (z >= 40)
			cout << "Invalid input\a\n" << endl;

		cout << "If you need to insert the information again,please enter 'Q' or 'q',thank you! " << endl;
		cin >> again;

	} while (again == 'Q' || again == 'q');
		

		
	return 0;
	
}
